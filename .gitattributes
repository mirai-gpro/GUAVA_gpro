# Auto detect text files and perform LF normalization
* text=auto

# Binary files - never convert line endings
*.pkl binary
*.npz binary
*.npy binary
*.pt binary
*.pth binary
*.bin binary
*.onnx binary
*.ply binary
*.obj binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Ensure shell scripts use LF
*.sh text eol=lf

# Python files
*.py text diff=python
